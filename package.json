{
  "name": "hosts-so-easy",
  "version": "1.2.3",
  "description": "Safe, parallel API for manipulating /etc/hosts",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gadicc/node-hosts-so-easy"
  },
  "keywords": [
    "/etc/hosts",
    "hosts",
    "hostfile",
    "hostsfile"
  ],
  "author": "Gadi Cohen <dragon@wastelands.net>",
  "license": "MIT",
  "dependencies": {
    "atomic-write": "^0.1.1",
    "eventemitter3": "^3.0.0",
    "lodash": "^4.17.4"
  },
  "scripts": {
    "build": "babel src -d lib",
    "coverage": "jest --coverage src",
    "coveralls": "jest --coverage src ; cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "commit": "git-cz",
    "dev": "nodemon src/index.js --exec babel-node",
    "lint": "eslint src",
    "prepare": "yarn build",
    "test": "jest src",
    "test-dist": "jest lib",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "2.1.1",
    "@semantic-release/git": "4.0.3",
    "@semantic-release/github": "4.2.18",
    "@semantic-release/npm": "3.3.2",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.5",
    "babel-preset-env": "1.7.0",
    "commitizen": "2.10.1",
    "condition-circle": "2.0.1",
    "coveralls": "3.0.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.19.1",
    "jest": "22.4.4",
    "nodemon": "1.17.5",
    "pify": "3.0.0",
    "semantic-release": "15.6.0",
    "tmp": "0.0.33"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/npm",
    "publish": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
