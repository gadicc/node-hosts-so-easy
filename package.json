{
  "name": "hosts-so-easy",
  "version": "1.2.9",
  "description": "Safe, parallel API for manipulating /etc/hosts",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gadicc/node-hosts-so-easy"
  },
  "keywords": [
    "/etc/hosts",
    "hosts",
    "hostfile",
    "hostsfile"
  ],
  "author": "Gadi Cohen <dragon@wastelands.net>",
  "license": "MIT",
  "dependencies": {
    "atomic-write": "^0.1.1",
    "eventemitter3": "^4.0.7"
  },
  "scripts": {
    "build": "babel src -d lib",
    "coverage": "jest --coverage src",
    "coveralls": "jest --coverage src ; cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "commit": "git-cz",
    "dev": "nodemon src/index.js --exec babel-node",
    "lint": "eslint src",
    "prepare": "yarn build",
    "test": "jest src",
    "test-dist": "jest lib",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-preset-env": "1.7.0",
    "commitizen": "4.2.4",
    "condition-circle": "2.0.2",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "jest": "26.6.3",
    "nodemon": "2.0.16",
    "pify": "5.0.0",
    "semantic-release": "17.4.7",
    "tmp": "0.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "//branchANDbranches": "https://github.com/bahmutov/condition-circle/issues/22",
    "branch": "master",
    "branches": "master",
    "verifyConditions": [
      "condition-circle"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
